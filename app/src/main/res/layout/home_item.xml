<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_472"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:contentPadding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30">

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:text="银座"
                    android:textColor="#FF373737"
                    android:textSize="@dimen/sp_28" />

                <ImageView
                    android:id="@+id/img_pay"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_12"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@id/txt_name"
                    android:src="@mipmap/pay_button" />

                <TextView
                    android:id="@+id/txt_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_toRightOf="@id/img_pay"
                    android:gravity="center_vertical"
                    android:text="东京"
                    android:textColor="#FF999999"
                    android:textSize="@dimen/sp_14" />

                <Button
                    android:id="@+id/btn_price"
                    android:layout_width="@dimen/dp_74"
                    android:layout_height="@dimen/dp_34"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/shape2"
                    android:text="￥28.00"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15">


                <TextView
                    android:id="@+id/txt_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_35"
                    android:text="疯狂购物买买买"
                    android:textColor="#FF636363"
                    android:textSize="@dimen/sp_18" />

                <TextView
                    android:id="@+id/txt_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:text="530人购买"
                    android:textColor="#FF636363"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/img_big"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_355"
                android:scaleType="fitXY"
                android:layout_marginTop="@dimen/dp_9"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
