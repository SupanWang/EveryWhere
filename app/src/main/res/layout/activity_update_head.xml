<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".ui.main.activity.UpdateHeadActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize">

        <ImageView
            android:id="@+id/img_update_back"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_gravity="left"
            android:src="@drawable/back_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_tool_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/txt_tool_head"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/img_update_op"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_gravity="right"
            android:src="@drawable/dian"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_35" />
    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"
        android:background="@drawable/gra_white_de" />

    <ImageView
        android:id="@+id/img_update"
        android:layout_marginTop="@dimen/dp_70"
        android:scaleType="fitXY"
        android:src="@drawable/zhanweitu_touxiang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>