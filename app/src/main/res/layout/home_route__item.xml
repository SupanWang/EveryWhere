<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/_route_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_13"
        android:text="东京"
        android:textColor="@color/c_999"
        android:textSize="@dimen/dp_14" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/route_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_2"
            android:text="银座"
            android:textColor="@color/c_FF373737"
            android:textSize="@dimen/dp_26" />

        <ImageView
            android:layout_width="@dimen/dp_9"
            android:layout_height="@dimen/dp_9"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_13"
            android:src="@mipmap/close" />
    </RelativeLayout>

    <TextView
        android:id="@+id/route_desc"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6小时疯狂买买买攻略！"
        android:textColor="@color/c_FF636363"
        android:textSize="@dimen/sp_18"
        />
    
    <ImageView
        android:id="@+id/route_img"
        android:layout_marginTop="@dimen/dp_14"
        android:scaleType="fitXY"
        android:src="@drawable/icon_me_kaquan_banmi1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35" />
</LinearLayout>
