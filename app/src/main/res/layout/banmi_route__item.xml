<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_400"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_15">

    <android.support.v7.widget.CardView
        android:layout_marginBottom="@dimen/dp_15"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_400">

        <ImageView
            android:id="@+id/img_big"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_400"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_116"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:background="@drawable/gra_tr">

                <RelativeLayout
                    android:id="@+id/rl_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:maxLength="3"
                        android:ellipsize="end"
                        android:text="银座"
                        android:textColor="#FF373737"
                        android:textSize="@dimen/sp_25" />

                    <ImageView
                        android:id="@+id/img_navg"
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_12"
                        android:layout_below="@id/txt_guanzhu"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_36"
                        android:layout_toRightOf="@id/txt_name"
                        android:src="@mipmap/navg" />

                    <TextView
                        android:id="@+id/txt_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:layout_marginTop="@dimen/dp_33"
                        android:layout_toRightOf="@id/txt_name"
                        android:text="东京"
                        android:textColor="#FF999999"
                        android:textSize="@dimen/sp_14" />

                    <Button
                        android:id="@+id/btn_price"
                        android:layout_width="@dimen/dp_74"
                        android:layout_height="@dimen/dp_34"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_25"
                        android:background="@drawable/gr_shop"
                        android:text="￥28.00"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/txt_shop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/btn_price"
                        android:layout_marginRight="@dimen/dp_14"
                        android:layout_marginTop="@dimen/dp_2"
                        android:text="甘心去"
                        android:textColor="@color/c_373737"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/txt_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_name"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:layout_marginTop="@dimen/dp_24"
                        android:text="疯狂购物买买买"
                        android:textColor="#FF636363"
                        android:textSize="@dimen/sp_18" />
                </RelativeLayout>
            </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>