                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_60"
                    android:background="@drawable/route_detal_btn"
                    android:drawableLeft="@mipmap/collect_default"
                    android:paddingLeft="@dimen/dp_23"
                    android:paddingRight="@dimen/dp_18"
                    android:text="@string/collects"
                    android:textColor="@color/c_636363"
                    android:textSize="@dimen/sp_14"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/mBtn_Yicollect"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_40"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_60"
                    android:background="@drawable/route_detal_btn"
                    android:drawableLeft="@mipmap/collect_highlight"
                    android:paddingLeft="@dimen/dp_23"
                    android:paddingRight="@dimen/dp_18"
                    android:text="@string/Okcollects"
                    android:textColor="@color/c_636363"
                    android:textSize="@dimen/sp_14"
                    android:visibility="gone" />

