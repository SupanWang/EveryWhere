    android:fitsSystemWindows="true"
    tools:context=".ui.main.activity.HomeRouteActivity">

    <RelativeLayout
        android:id="@+id/rv_select"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_4"
            android:background="@drawable/gra_white_de" />

        <Button
            android:id="@+id/mBtn_route"
            android:layout_width="@dimen/dp_118"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/route_detal_route"
            android:text="@string/check_route"
            android:textColor="@color/c_fa6a132"
            android:textSize="@dimen/sp_14" />

        <Button
            android:id="@+id/mBtn_price"
            android:layout_width="@dimen/dp_118"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/gr_shop"
            android:text="@string/price"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:visibility="visible" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/rv_select">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_big_home"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_330"
                    android:scaleType="centerCrop" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_100"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/txt_route_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:layout_marginTop="@dimen/dp_13"
                        android:gravity="center_vertical"
                        android:text="东京"
                        android:textColor="#FF999999"
                        android:textSize="@dimen/sp_14" />


                    <TextView
                        android:id="@+id/txt_route_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_route_city"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:layout_marginTop="@dimen/dp_2"
                        android:text="银座"
                        android:textColor="@color/c_FF373737"
                        android:textSize="@dimen/sp_25" />

