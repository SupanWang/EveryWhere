<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_centerInParent="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dp_30"
        android:id="@+id/img_big"
        android:layout_width="@dimen/dp_335"
        android:layout_height="@dimen/dp_400"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_centerInParent="true"
        android:layout_width="@dimen/dp_335"
        android:layout_height="@dimen/dp_116"
        android:layout_alignParentTop="true"
        android:background="@drawable/gra_tr">

        <RelativeLayout
            android:layout_centerInParent="true"
            android:id="@+id/rl_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_25"
                android:text="银座"
                android:textColor="#FF373737"
                android:textSize="@dimen/sp_25" />

            <ImageView
                android:id="@+id/img_pay"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_12"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_toRightOf="@id/txt_name"
                android:src="@mipmap/navg" />

            <TextView
                android:id="@+id/txt_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/img_pay"
                android:gravity="center_vertical"
                android:text="东京"
                android:textColor="#FF999999"
                android:textSize="@dimen/sp_14" />

            <Button
                android:id="@+id/btn_price"
                android:layout_width="@dimen/dp_74"
                android:layout_height="@dimen/dp_34"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/shape2"
                android:text="￥28.00"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_below="@id/rl_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15">

            <TextView
                android:id="@+id/txt_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_25"
                android:text="疯狂购物买买买"
                android:textColor="#FF636363"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/txt_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:text="530人购买"
                android:textColor="#FF636363"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>
    </RelativeLayout>


