<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_route"
        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="@dimen/dp_38"
        android:layout_height="@dimen/dp_38" />

    <TextView
        android:id="@+id/txt_route_name"
        android:layout_toRightOf="@id/img_route"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UUJ海豚."
        android:textColor="#FF373737"
        android:textSize="@dimen/sp_14"
        />

        <TextView
            android:id="@+id/txt_route_time"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@id/img_route"
            android:layout_below="@id/txt_route_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017年5月25日"
            android:textColor="#FF999999"
            android:textSize="@dimen/sp_10"
            />

        <TextView
            android:id="@+id/txt_route_desc"
            android:layout_below="@id/img_route"
            android:layout_marginLeft="@dimen/dp_64"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="轻井泽很多漂亮的教堂。"
            android:textColor="#FF636363"
            android:textSize="@dimen/sp_14"
            />

        <View
            android:layout_below="@id/txt_route_desc"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_64"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#FFDCDCDC"
            />
    </RelativeLayout>

</LinearLayout>
