<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view_dian1"
        android:layout_width="@dimen/dp_8"
        android:layout_height="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_7"
        android:layout_marginTop="@dimen/dp_3"
        android:background="#FFFA6A13" />

    <View
        android:layout_marginTop="@dimen/dp_5"
        android:id="@+id/view_line1"
        android:layout_width="@dimen/dp_2"
        android:layout_height="@dimen/dp_160"
        android:layout_below="@+id/view_dian1"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="#FFFA6A13" />

    <View
        android:layout_below="@id/view_line1"
        android:id="@+id/view_dian2"
        android:layout_width="@dimen/dp_8"
        android:layout_height="@dimen/dp_8"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/dp_7"
        android:layout_marginTop="185dp"
        android:background="#FFFA6A13" />

    <View
        android:layout_marginTop="@dimen/dp_8"
        android:id="@+id/view_line2"
        android:layout_width="@dimen/dp_2"
        android:layout_height="@dimen/dp_140"
        android:layout_below="@id/view_dian2"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="#FFFA6A13" />

    <TextView
        android:id="@+id/txt_state_time2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:text="5小时前"
        android:textColor="@color/c_FF999999"
        android:textSize="@dimen/sp_12" />


    <TextView
        android:id="@+id/txt_state_listen2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_state_time2"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:text="上传了一条动态"
        android:textColor="@color/c_FF3333"
        android:textSize="@dimen/sp_14" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_state_listen2"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:contentPadding="8dp">

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_state_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="这里是标题"
                android:textColor="#FF373737"
                android:textSize="@dimen/sp_16"
                />

            <TextView
                android:id="@+id/txt_state_content"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/sp_8"
                android:layout_below="@id/txt_state_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="像我一该不少吧，去过的朋友感觉怎..."
                android:textColor="#FF636363"
                android:textSize="@dimen/sp_14"
                />

            
            <com.bm.library.PhotoView
                android:layout_marginRight="@dimen/dp_15"
                android:id="@+id/img_state_big"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_below="@id/txt_state_content"
                android:scaleType="fitXY"
                android:src="@drawable/zhanweitu_xianlu_jingdian"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_130" />
            <View
                android:id="@+id/view3"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_below="@id/img_state_big"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:background="@drawable/gra_white_de" />

            <RelativeLayout
                android:layout_marginTop="@dimen/dp_8"
                android:layout_below="@id/view3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_110"
                    android:id="@+id/txt_state_speak2"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="88"
                    android:textColor="#FF999999"
                    android:textSize="@dimen/sp_14"
                    />

                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/img_speak2"
                    android:layout_marginRight="@dimen/dp_90"
                    android:src="@mipmap/comment"
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="@dimen/dp_15" />

                <TextView
                    android:id="@+id/txt_state_zanNum2"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="137"
                    android:textColor="#FFFA6A13"
                    android:textSize="@dimen/sp_14"
                    />
                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/img_zan2"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/praise_unselected"
                    android:layout_width="@dimen/dp_13"
                    android:layout_height="@dimen/dp_13" />


            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
